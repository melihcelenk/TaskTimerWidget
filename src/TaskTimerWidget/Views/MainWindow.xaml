<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="TaskTimerWidget.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Task Timer Widget"
    Closed="Window_Closed">

    <Grid Padding="12,32,12,12" RowSpacing="12" Background="#D0D0D0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with Title and Add Button -->
        <Grid Grid.Row="0" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="Task Timer"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                VerticalAlignment="Center" />

            <Button
                x:Name="AddTaskButton"
                Grid.Column="1"
                Content="+"
                Width="40"
                Height="40"
                FontSize="20"
                Background="#0078D4"
                Foreground="White"
                CornerRadius="4"
                Click="AddTaskButton_Click" />
        </Grid>

        <!-- Task List -->
        <ScrollView Grid.Row="1">
            <ItemsControl
                x:Name="TasksItemsControl"
                ItemsSource="{Binding Tasks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="0" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="10"
                            Margin="0,4"
                            CornerRadius="6"
                            BorderThickness="1"
                            BorderBrush="#1A1A1A"
                            Background="#2A2A2A"
                            PointerEntered="TaskItem_PointerEntered"
                            PointerExited="TaskItem_PointerExited"
                            Tapped="TaskItem_Tapped"
                            Tag="{Binding}">

                            <Grid RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Task Name -->
                                <TextBlock
                                    Grid.Row="0"
                                    Text="{Binding Name}"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="{Binding IsActive, Converter={StaticResource RunningTextColorConverter}}"
                                    TextTrimming="CharacterEllipsis" />

                                <!-- Timer Display -->
                                <TextBlock
                                    Grid.Row="1"
                                    Text="{Binding FormattedTime}"
                                    FontSize="18"
                                    FontWeight="Normal"
                                    Foreground="{Binding IsActive, Converter={StaticResource RunningTextColorConverter}}"
                                    FontFamily="Courier New" />

                                <!-- Delete Button -->
                                <Grid Grid.Row="2" HorizontalAlignment="Right">
                                    <Button
                                        Content="âœ•"
                                        Width="36"
                                        Height="36"
                                        FontSize="16"
                                        Padding="0"
                                        Background="#D32F2F"
                                        Foreground="White"
                                        CornerRadius="4"
                                        Command="{Binding DeleteCommand}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollView>

        <!-- Empty State Message -->
        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Spacing="12"
            x:Name="EmptyStatePanel">
            <TextBlock
                Text="ðŸ“‹"
                FontSize="48"
                TextAlignment="Center" />
            <TextBlock
                Text="No tasks yet"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#333333"
                TextAlignment="Center" />
            <TextBlock
                Text="Click the + button to add your first task"
                FontSize="12"
                Foreground="#888888"
                TextAlignment="Center" />
        </StackPanel>

        <!-- Status Bar -->
        <TextBlock
            x:Name="StatusBar"
            Grid.Row="2"
            FontSize="11"
            Foreground="#999999" />
    </Grid>
</Window>

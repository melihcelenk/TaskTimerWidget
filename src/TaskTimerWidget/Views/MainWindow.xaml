<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="TaskTimerWidget.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Task Timer Widget"
    Closed="Window_Closed"
    Activated="Window_Activated">

    <Grid RowSpacing="0" Background="#D0D0D0" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar (Sticky Notes Style) - Draggable via SetTitleBar -->
        <Grid Grid.Row="0" Height="32" Padding="12,4,4,4" Background="#B8B8B8" x:Name="TitleBarGrid" Opacity="0" IsHitTestVisible="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Title (Left, Hidden by Default) -->
            <TextBlock
                Grid.Column="0"
                Text=""
                FontSize="12"
                Foreground="#333333"
                VerticalAlignment="Center"
                x:Name="TitleTextBlock" />

            <!-- Close Button (Right, Minimal Padding) -->
            <Button
                Grid.Column="1"
                x:Name="CloseButton"
                Content="âœ•"
                Width="24"
                Height="24"
                FontSize="12"
                Padding="0"
                Background="Transparent"
                Foreground="#333333"
                CornerRadius="0"
                Click="CloseButton_Click" />
        </Grid>

        <!-- Task List -->
        <ScrollView Grid.Row="1" Padding="12,12,12,12">
            <StackPanel Spacing="0">
                <!-- Tasks from ItemsControl -->
                <ItemsControl
                    x:Name="TasksItemsControl"
                    ItemsSource="{Binding Tasks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="0" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="10"
                                Margin="0,4"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#1A1A1A"
                                Background="#2A2A2A"
                                PointerEntered="TaskItem_PointerEntered"
                                PointerExited="TaskItem_PointerExited"
                                Tapped="TaskItem_Tapped"
                                RightTapped="TaskItem_RightTapped"
                                Tag="{Binding}">

                                <Grid RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Task Name + Delete Button (Top Row) -->
                                    <Grid Grid.Row="0" ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Text="{Binding Name}"
                                            FontSize="16"
                                            FontWeight="Normal"
                                            Foreground="{Binding IsActive, Converter={StaticResource RunningTextColorConverter}}"
                                            TextTrimming="CharacterEllipsis"
                                            VerticalAlignment="Center" />

                                        <Button
                                            Grid.Column="1"
                                            Content="âœ•"
                                            Width="28"
                                            Height="28"
                                            FontSize="14"
                                            Padding="0"
                                            Background="#D32F2F"
                                            Foreground="White"
                                            CornerRadius="4"
                                            Command="{Binding DeleteCommand}" />
                                    </Grid>

                                    <!-- Timer Display + Percentage (Bottom Row) -->
                                    <Grid Grid.Row="1" ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Timer Display -->
                                        <TextBlock
                                            Grid.Column="0"
                                            Text="{Binding FormattedTime}"
                                            FontSize="18"
                                            FontWeight="Normal"
                                            Foreground="{Binding IsActive, Converter={StaticResource RunningTextColorConverter}}"
                                            FontFamily="ms-appx:///Assets/Fonts/TrebuchetMS.ttf#Trebuchet MS" />

                                        <!-- Percentage Display -->
                                        <TextBlock
                                            Grid.Column="1"
                                            Text="{Binding TimePercentage}"
                                            FontSize="12"
                                            FontWeight="Normal"
                                            Foreground="#999999"
                                            VerticalAlignment="Bottom" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- New Task Input Card (inside ScrollView, below tasks) -->
                <Border
                    x:Name="NewTaskBorder"
                    Padding="10"
                    Margin="0,4"
                    CornerRadius="6"
                    BorderThickness="1"
                    BorderBrush="#1A1A1A"
                    Background="#2A2A2A"
                    Visibility="Collapsed">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- TextBox for input -->
                        <TextBox
                            x:Name="NewTaskTextBox"
                            Grid.Row="0"
                            PlaceholderText="Task name..."
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="#2A2A2A"
                            BorderThickness="0"
                            Padding="12,8,0,8"
                            KeyDown="NewTaskTextBox_KeyDown" />

                        <!-- Empty space where timer would be -->
                        <Grid Grid.Row="1" Height="18" />
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollView>

        <!-- Bottom Controls -->
        <StackPanel Grid.Row="2" Spacing="8" Padding="12,12,12,12">
            <!-- Add Button (Centered) -->
            <StackPanel HorizontalAlignment="Center">
                <Button
                    x:Name="AddTaskButton"
                    Content="+"
                    Width="40"
                    Height="40"
                    FontSize="20"
                    Background="#3A3A3A"
                    Foreground="White"
                    CornerRadius="4"
                    Click="AddTaskButton_Click" />
            </StackPanel>

            <!-- Status Bar -->
            <TextBlock
                x:Name="StatusBar"
                FontSize="11"
                Foreground="#999999"
                TextAlignment="Center" />
        </StackPanel>

        <!-- Empty State Message (Overlay in Row 1) -->
        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Spacing="12"
            x:Name="EmptyStatePanel">
            <TextBlock
                Text="ðŸ“‹"
                FontSize="48"
                TextAlignment="Center" />
            <TextBlock
                Text="No tasks yet"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#333333"
                TextAlignment="Center" />
            <TextBlock
                Text="Click the + button to add your first task"
                FontSize="12"
                Foreground="#888888"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>

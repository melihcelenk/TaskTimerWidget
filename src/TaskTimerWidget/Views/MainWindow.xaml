<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="TaskTimerWidget.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Task Timer Widget"
    Closed="Window_Closed">

    <Grid Padding="12,12,12,12" RowSpacing="12" Background="#D0D0D0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Task List -->
        <ScrollView Grid.Row="0">
            <StackPanel Spacing="0">
                <!-- Tasks from ItemsControl -->
                <ItemsControl
                    x:Name="TasksItemsControl"
                    ItemsSource="{Binding Tasks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="0" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="10"
                                Margin="0,4"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#1A1A1A"
                                Background="#2A2A2A"
                                PointerEntered="TaskItem_PointerEntered"
                                PointerExited="TaskItem_PointerExited"
                                Tapped="TaskItem_Tapped"
                                Tag="{Binding}">

                                <Grid RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Task Name + Delete Button (Top Row) -->
                                    <Grid Grid.Row="0" ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Text="{Binding Name}"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="{Binding IsActive, Converter={StaticResource RunningTextColorConverter}}"
                                            TextTrimming="CharacterEllipsis"
                                            VerticalAlignment="Center" />

                                        <Button
                                            Grid.Column="1"
                                            Content="âœ•"
                                            Width="36"
                                            Height="36"
                                            FontSize="16"
                                            Padding="0"
                                            Background="#D32F2F"
                                            Foreground="White"
                                            CornerRadius="4"
                                            Command="{Binding DeleteCommand}" />
                                    </Grid>

                                    <!-- Timer Display -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Text="{Binding FormattedTime}"
                                        FontSize="18"
                                        FontWeight="Normal"
                                        Foreground="{Binding IsActive, Converter={StaticResource RunningTextColorConverter}}"
                                        FontFamily="Courier New" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- New Task Input Card (inside ScrollView, below tasks) -->
                <Border
                    x:Name="NewTaskBorder"
                    Padding="10"
                    Margin="0,4"
                    CornerRadius="6"
                    BorderThickness="1"
                    BorderBrush="#1A1A1A"
                    Background="#2A2A2A"
                    Visibility="Collapsed">
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- TextBox for input -->
                        <TextBox
                            x:Name="NewTaskTextBox"
                            Grid.Row="0"
                            PlaceholderText="Task name..."
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="#2A2A2A"
                            BorderThickness="0"
                            Padding="12,8,0,8"
                            KeyDown="NewTaskTextBox_KeyDown" />

                        <!-- Empty space where timer would be -->
                        <Grid Grid.Row="1" Height="18" />
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollView>

        <!-- Bottom Controls (Button and Status) -->
        <Grid Grid.Row="1" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Close Button (Left) -->
            <Button
                Grid.Column="0"
                x:Name="CloseButton"
                Content="âœ•"
                Width="36"
                Height="36"
                FontSize="16"
                Padding="0"
                Background="#D32F2F"
                Foreground="White"
                CornerRadius="4"
                Click="CloseButton_Click" />

            <!-- Add Button (Center) -->
            <Button
                Grid.Column="1"
                x:Name="AddTaskButton"
                Content="+"
                Width="40"
                Height="40"
                FontSize="20"
                Background="#3A3A3A"
                Foreground="White"
                CornerRadius="4"
                HorizontalAlignment="Center"
                Click="AddTaskButton_Click" />

            <!-- Status Bar (Right) -->
            <TextBlock
                Grid.Column="2"
                x:Name="StatusBar"
                FontSize="11"
                Foreground="#999999"
                VerticalAlignment="Center" />
        </Grid>

        <!-- Empty State Message (Overlay in Row 0) -->
        <StackPanel
            Grid.Row="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Spacing="12"
            x:Name="EmptyStatePanel">
            <TextBlock
                Text="ðŸ“‹"
                FontSize="48"
                TextAlignment="Center" />
            <TextBlock
                Text="No tasks yet"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#333333"
                TextAlignment="Center" />
            <TextBlock
                Text="Click the + button to add your first task"
                FontSize="12"
                Foreground="#888888"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
